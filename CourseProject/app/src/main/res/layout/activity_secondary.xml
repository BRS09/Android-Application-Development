<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondaryActivity">

    <Button
        android:id="@+id/preferencesButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Preferences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="630dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/introMessage"
                android:layout_width="315dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="406dp"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Income:"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userIncomeText"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="30sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/transactionButton"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:text="Transactions"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/billsButton"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:text="Bills"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/budgetButton"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:text="Budgets"
                app:cornerRadius="15dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/helpButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="Help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>